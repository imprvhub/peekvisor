---

import FooterSocialLink from "@components/ui/links/FooterSocialLink.astro";
import EmailFooterInput from "@components/ui/forms/input/EmailFooterInput.astro";
import Icon from "@components/ui/icons/Icon.astro";
import BrandLogo from "@components/BrandLogo.astro";
import { SITE } from "@data/constants";
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const footerLinks = [
  {
    links: [
      { name: t("footer.ecosystem.changelog"), url: `/${lang}/changelog/` },
      { name: t("footer.ecosystem.terms"), url: `/${lang}/terms/` },
      { name: t("footer.ecosystem.privacy"), url: `/${lang}/privacy/` },
    ],
  },
  {
    links: [
      { name: t("footer.resources.pricing"), url: `/${lang}/pricing` },
      { name: t("footer.resources.faq"), url: `/${lang}/faq` },
      { name: t("footer.resources.contact"), url: `/${lang}/contact` },
    ],
  },
];

const socialLinks = {
  github: "https://github.com/peekvisor",
  linkedin: "https://linkedin.com/company/peekvisor-analytics",
};
---

<footer class="w-full bg-neutral-100 dark:bg-neutral-900">
  <div
    class="mx-auto w-full max-w-[85rem] px-4 py-10 sm:px-6 lg:px-16 lg:pt-20 2xl:max-w-(--breakpoint-2xl)"
  >
    <div class="grid grid-cols-1 gap-6 min-[560px]:grid-cols-2 md:grid-cols-4 lg:grid-cols-5">
      <div class="col-span-full flex flex-col items-center min-[560px]:items-start lg:col-span-2">
        <BrandLogo class="h-auto w-32" />
        <p class="mt-2 text-center text-sm text-neutral-600 dark:text-neutral-400 min-[560px]:text-left">
          Â© <span id="current-year"></span> {SITE.title} Analytics. {t("footer.rights")}
        </p>
      </div>
      {
      footerLinks.map((section) => (
        <div class="col-span-1 max-[560px]:hidden">
          <ul class="mt-3 grid space-y-3">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.url}
                  class="inline-flex gap-x-2 rounded-lg text-sm text-neutral-600 outline-hidden ring-zinc-500 transition duration-300 hover:text-neutral-500 focus-visible:ring-3 dark:text-neutral-400 dark:ring-zinc-200 dark:hover:text-neutral-300 dark:focus:outline-hidden"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
    <div class="col-span-full flex justify-center min-[560px]:hidden">
      <div class="grid grid-cols-2 gap-x-8 gap-y-3">
        {footerLinks.flatMap(section => section.links).map((link) => (
          <a
            href={link.url}
            class="inline-flex justify-center gap-x-2 rounded-lg text-xs text-neutral-600 outline-hidden ring-zinc-500 transition duration-300 hover:text-neutral-500 focus-visible:ring-3 dark:text-neutral-400 dark:ring-zinc-200 dark:hover:text-neutral-300 dark:focus:outline-hidden"
          >
            {link.name}
          </a>
        ))}
      </div>
    </div>
    </div>

    <div
      class="mt-9 flex flex-col items-center gap-4 sm:mt-12 sm:flex-row sm:justify-between sm:gap-0"
    >
      <div class="flex items-center">
        <a href="https://www.lemonsqueezy.com/" target="_blank" rel="noopener noreferrer">
          <img
            src="/Lemon-Squeezy-Powered-Badge-Purple-Soft.svg"
            alt="Lemon Squeezy Badge"
            class="lemon-badge-light h-auto sm:w-[220px] lg:w-[280px]"
          />
          <img
            src="/Lemon-Squeezy-Powered-Badge-Purple-Dark.svg"
            alt="Lemon Squeezy Badge"
            class="lemon-badge-dark h-auto sm:w-[220px] lg:w-[280px]"
          />
        </a>
      </div>
      
      <div class="flex items-center">
        <FooterSocialLink url={socialLinks.github}
          ><Icon name="githubFooter" />
        </FooterSocialLink>

        <FooterSocialLink url={socialLinks.linkedin}
          ><Icon name="linkedinFooter" />
        </FooterSocialLink>
      </div>
    </div>

    <script>
      const year = new Date().getFullYear();
      const element = document.getElementById("current-year");
      element!.innerText = year.toString();
    </script>
  </div>
</footer>

<style>
  .lemon-badge-light {
    display: block;
  }
  .lemon-badge-dark {
    display: none;
  }
  
  :global(.dark) .lemon-badge-light {
    display: none;
  }
  
  :global(.dark) .lemon-badge-dark {
    display: block;
  }
</style>