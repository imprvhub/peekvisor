---
import type { Props } from "@astrojs/starlight/props";

const main = "/";
const locale = Astro.props.locale ? Astro.props.locale + "/" : "";
const docs = "/" + locale + "welcome-to-docs/";
---

<span class="site-title flex">
  <a class="main-logo" href={main} aria-label="PeekVisor">
    <span class="logo-text">PeekVisor</span>
  </a>
</span>

<style>
  .site-title {
    gap: 1rem;
    margin-right: 1rem;
  }
  .site-title a {
    display: flex;
    text-decoration: none;
  }
  
  .flex {
    display: flex;
    align-items: center;
  }
  
  .logo-text {
    font-size: 1.5rem;
    font-weight: bold;
    color: #576469;
    transition: transform 250ms cubic-bezier(0.33, 1, 0.68, 1);
  }
  
  .site-title a:focus-visible {
    outline: 0;
  }
  
  .site-title a:focus-visible .logo-text,
  .site-title a:hover .logo-text {
    transform: translateY(calc(.1rem * -1));
  }
</style>