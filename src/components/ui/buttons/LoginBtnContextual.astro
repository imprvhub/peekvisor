---
const { title = "Log in" } = Astro.props;

interface Props {
  title?: string;
}

const baseClasses =
  "btn-gradient flex items-center justify-center gap-x-2 text-white font-medium px-6 py-2 rounded-lg transition duration-300 hover:opacity-90";

const userSVG = `<svg
      class="h-4 w-4 shrink-0"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
  >
    <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
    <circle cx="12" cy="7" r="4"></circle>
  </svg>`;
---

<button
  type="button"
  class={baseClasses}
  data-hs-overlay="#hs-toggle-between-modals-login-modal"
>
  <Fragment set:html={userSVG} />
  {title}
</button>